SET(CMAKE_SYSTEM_NAME Linux)
SET(CMAKE_SYSTEM_PROCESSOR arm)

if(CHIP STREQUAL "TCC897x")
    SET(COMPILER_PREFIX arm-gcc_4_6_3-ssp/bin/arm-none-linux-gnueabi-) # for TCC897x 32bits
else()
    SET(COMPILER_PREFIX gcc-linaro-7.2.1-2017.11-x86_64_arm-linux-gnueabi/bin/arm-linux-gnueabi-)
    #SET(COMPILER_PREFIX gcc-arm-9.2-2019.12-x86_64-arm-none-linux-gnueabihf/bin/arm-none-linux-gnueabihf-)
endif()

if("$ENV{USER}" STREQUAL "builduser1" OR "$ENV{USER}" STREQUAL "builduser2")
	SET(COMPILER_PATH /opt)
else()
	SET(COMPILER_PATH /home/$ENV{USER}/opt)
endif()
SET(COMPILER_ROOT ${COMPILER_PATH}/${COMPILER_PREFIX})

SET(CMAKE_C_COMPILER ${COMPILER_ROOT}gcc)
SET(CMAKE_CXX_COMPILER ${COMPILER_ROOT}g++)
SET(CMAKE_LINKER ${COMPILER_ROOT}ld)
SET(CMAKE_NM ${COMPILER_ROOT}nm)
SET(CMAKE_OBJCOPY ${COMPILER_ROOT}objcopy)
SET(CMAKE_OBJDUMP ${COMPILER_ROOT}objdump)
SET(CMAKE_RANLIB ${COMPILER_ROOT}ranlib)
